<div class="container">
    <div class="text-center">
        <%= simple_form_for @product do |f| %>
        <%= @product.title.capitalize %>
        <%= f.input :product_type %>
        <%= f.input :rating %>
        <%= f.input :price %>
        <%= f.button :submit, class:'btn btn-primary', data: { edit_product_target: 'submit'} %>
    </div>
  <% end %>
</div>
